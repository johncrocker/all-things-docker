version: "3.3"

services:
  db:
   image: postgres:alpine
   environment:
     - POSTGRES_USER=dbusers
     - POSTGRES_PASSWORD==postgres
     - POSTGRES_DB=p
   restart: unless-stopped
   volumes:
     - gogs-db-data:/var/lib/postgresql/data
   expose:
     - 5432

volumes:
  gogs-data:
  gogs-db-data:
